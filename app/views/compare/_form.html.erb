<div class="container card my-3 py-3">
  <%= form_with url: "/compare", method: :post do |form| %>
    <div class="form-group mb-3">
      <%= form.label :json1, "Json file 1:" %>
      <%= form.file_field :json1, class: "form-control-file", accept: ".json" %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :json2, "Json file 2:" %>
      <%= form.file_field :json2, class: "form-control-file", accept: ".json" %>
    </div>
      <%= form.submit "Compare", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
